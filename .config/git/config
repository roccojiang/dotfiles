[user]
  name = Rocco Jiang
  email = git-noreply@roccojiang.com
  useConfigOnly = true

[includeIf "hasconfig:remote.*.url:**/*github.com*/**"]
  path = config-github

[includeIf "hasconfig:remote.*.url:**/*codeberg.org*/**"]
  path = config-codeberg

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[include]
  path = ~/.local/share/themes/tokyonight/delta/tokyonight.gitconfig
[delta]
  features = tokyonight
  hyperlinks = true
  hyperlinks-file-link-format = "vscode://file/{path}:{line}"
  line-numbers = true
  navigate = true  # use n and N to move between diff sections

[merge]
  conflictStyle = zdiff3

[commit]
  gpgsign = true
	verbose = true

[push]
	autoSetupRemote = true

[rebase]
  autosquash = true

[alias]
  # convenience aliases
  st = status

  a = add
  aa = add -A  # stage all (new, modified, deleted) files
  au = add -u  # stage modified and deleted files only, without adding new files
  ap = add --patch
  ai = add --interactive

  ci = commit
  cm = commit -m
  cam = commit -am  # equivalent to `git add -u && git commit -m`

  l = log --oneline
  lg = log --oneline --graph

  # semantic aliases (i.e. https://landongrindheim.com/2018/12/13/semantic-git-aliases.html)
  unstage = restore --staged
  uncommit = reset --soft @~  # @~ is short for HEAD~1

  # difftastic
  dlog = -c diff.external=difft log --ext-diff
  dshow = -c diff.external=difft show --ext-diff
  ddiff = -c diff.external=difft diff

