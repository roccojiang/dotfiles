  "dance.modes": {
    "input": {
      "inheritFrom": "insert"
    },
    "insert": {
      "cursorStyle": "line",
      "lineNumbers": "inherit",
      "selectionBehavior": "character"
    },
    "normal": {
      "cursorStyle": "block",
      "lineNumbers": "inherit",
      "selectionBehavior": "character"
    },
    "select": {
      "cursorStyle": "underline",
      "inheritFrom": "normal",
      "onLeaveMode": [
        [
          ".selections.save",
          {
            "register": " ^",
            "style": {
              "borderColor": "$editor.selectionBackground",
              "borderRadius": "1px",
              "borderStyle": "solid",
              "borderWidth": "2px"
            },
            "until": [
              [
                "mode-did-change",
                {
                  "include": ["normal", "select"]
                }
              ],
              ["selections-did-change"]
            ]
          }
        ]
      ]
    }
  },

  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingQuotes": "never",
  "editor.fontFamily": "Iosevka, MesloLGS NF", // MesloLGS NF for p10k symbols
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.rulers": [120],
  "editor.semanticTokenColorCustomizations": {
    // Extra semantic highlighting configuration, similar to the version used in Helix editor:
    // https://github.com/helix-editor/helix/blob/master/runtime/themes/tokyonight.toml
    "[Tokyo Night]": {
      "enabled": true,
      "rules": {
        "class": {
          "foreground": "#2ac3de"
        },
        "class.abstract": {
          "foreground": "#7dcfff"
        },
        "enum": {
          "foreground": "#2ac3de"
        },
        "enum.abstract": {
          "foreground": "#7dcfff"
        },
        "interface": {
          "foreground": "#2ac3de"
        },
        "interface.abstract": {
          "foreground": "#7dcfff"
        },
        "parameter": {
          "fontStyle": "italic",
          "foreground": "#e0af68"
        },
        "struct": {
          "foreground": "#2ac3de"
        },
        "struct.abstract": {
          "foreground": "#7dcfff"
        },
        "type": {
          "foreground": "#2ac3de"
        },
        "type.abstract": {
          "foreground": "#7dcfff"
        }
      }
    }
  },
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,

  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
